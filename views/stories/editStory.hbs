<div class="container bg-danger">
    <div class="row">
        <div class="col-12 bg-warning p-4">
            <h3>Edit Story</h3>
            <form action="/Stories/{{story._id}}" method="POST">
                <input type="hidden" name="_method" value="PUT">

                <div class="form-group">
                    <input type="text" name="title" id="title" class="form-control" value="{{story.title}}">
                    {{!-- <label for="title">Title</label> --}}
                </div>

                <div class="form-group">
                    <select name="status" id="status" class="form-control" aria-placeholder="Satus">

                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>

                    </select>
                    {{!-- <label for="status">Status</label> --}}
                </div>
                <div class="form-group">
                    <h5>Tell yout Story</h5>
                    <textarea name="body" id="body">{{story.body}}</textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save</button>
                    <a href="/dashboard" class="btn btn-danger ml-2">Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>